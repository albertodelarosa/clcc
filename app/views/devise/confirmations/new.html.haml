%h3 Resend confirmation instructions
= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, class: "sr-only"
    = f.email_field :email, class: "form-control input-sm", placeholder: "email", autofocus: true
  .form-group
    %input#sign-in.btn.btn-primary.btn-block{:type => "submit", :value => "resend confirmation instructions"}
= render "devise/shared/links"
