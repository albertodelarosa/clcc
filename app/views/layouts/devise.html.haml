!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Welcome Chicano Legacy Car Club
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body{class: (Rails.env.eql?("production") ? nil : "#{controller.controller_name} #{controller.action_name}")}
    -if user_signed_in?
      = render "shared/utilites/header/dashboard"
    -else
      = render "shared/utilites/header/welcome"
.container
  .row
    .col-xs-12
      .well.well-lg
        = link_to "Back", :back, class: " btn btn-warning pull-right"
        .row
          .col-xs-12.col-sm-6
            = yield
