#myCarousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner{:role => "listbox"}
    .item.active
      %img.intro{alt: "First slide", src: "/assets/sanfran0.jpg", height: "500px"}
        .container
          .carousel-caption
            %h1 A San Francisco Car Club
            %p
              Showing unity with friends and affiliates.
    .item
      %img.intro{alt: "Second slide", src: "/assets/eastbay.jpg", height: "500"}
        .container
          .carousel-caption
            %h1 The East Bay Chapter, ORALE!
            %p Proudly representing Chicano Legacy Car Club. Â¡Simon que si!
    .item
      %img.intro{alt: "Third slide", src: "/assets/founders.jpg", height: "500"}
        .container
          .carousel-caption
            %h1 A few of the founders
            %p
              With some familia
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
